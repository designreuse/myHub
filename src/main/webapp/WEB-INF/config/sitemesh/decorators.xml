<?xml version="1.0" encoding="UTF-8"?>
<decorators defaultDir="/resources/decorators">

    <!-- 유저 페이지 -->
    <decorator name="layoutUser" page="layoutUser.jsp">
        <pattern>/user/userAdd</pattern>
        <pattern>/user/userSearch</pattern>
        <pattern>/user/userInfo</pattern>
        <pattern>/user/userEdit</pattern>
    </decorator>
    
    <!-- 관리자 페이지 -->
    <decorator name="layoutAdmin" page="layoutAdmin.jsp">
        <pattern>/admin/*</pattern>
    </decorator>
    
    <!-- 관리자 페이지 팝업-->
    <decorator name="layoutPopupAdmin" page="layoutPopupAdmin.jsp">
        <pattern>/admin/*Popup</pattern>
    </decorator>
    
    <!-- 테스트 페이지 -->
    <decorator name="layoutTest" page="layoutUser.jsp">
        <pattern>/test/*</pattern>
    </decorator>
   
</decorators>